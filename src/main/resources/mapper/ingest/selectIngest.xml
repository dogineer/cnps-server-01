<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.develop.web.domain.media.upload.mapper.UploadMapper">
    <select id="selectIngestList" resultType="IngestRequestData">
        SELECT id,
               member_id as memberId,
               create_at as createAt,
               title,
               program,
               name,
               phone,
               codec,
               del_fl,
               success
        FROM ingest
    </select>

    <select id="selectIngestCount" resultType="int">
        SELECT COUNT(*)
        FROM ingest
    </select>

    <select id="selectGetIngestList" resultType="IngestRequestData">
        SELECT i.id,
               member_id as memberId,
               create_at as createAt,
               title,
               program,
               e.name,
               e.phone,
               codec,
               i.del_fl,
               success
        FROM ingest i
                 JOIN emp e ON i.member_id = e.id
        ORDER BY create_at DESC
            LIMIT ${limit}
        OFFSET ${offset}
    </select>
</mapper>