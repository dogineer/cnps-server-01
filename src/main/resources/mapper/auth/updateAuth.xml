<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.develop.web.domain.auth.mapper.AuthMapper">
    <update id="updateAccess" parameterType="String">
        UPDATE emp SET access = 1 WHERE account = #{account}
    </update>

    <update id="updateApprovedAt" parameterType="String">
        UPDATE emp SET approved_at = (CURRENT_TIMESTAMP) WHERE account = #{account}
    </update>
</mapper>