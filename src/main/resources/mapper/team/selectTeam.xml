<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.develop.web.domain.users.team.mapper.TeamMapper">
    <select id="selectBelongTeamList" parameterType="map" resultType="TeamDto">
        SELECT t.id, t.name
        FROM team t
        WHERE (t.id = ${teamId} AND ${rankId} != 12)
           OR (${rankId} = 12);
    </select>

    <select id="selectTeamList" resultType="TeamDto">
        select id, name
        from team
        where p_id != 1
        UNION
        SELECT 3, '미배정'
    </select>

    <select id="selectTeamTypeList" resultType="TeamDto">
        select id, name
        from team
        where p_id = 1
          and id != 1
    </select>

    <select id="selectTeamTypeListForOnlyAdmin" resultType="TeamDto">
        select id, name
        from team
        where id != 1
    </select>
</mapper>